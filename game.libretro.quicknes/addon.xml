<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.quicknes"
		name="QuickNES"
		version="1.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.quicknes.so"
                   library_linux="game.libretro.quicknes.so"
                   library_osx="game.libretro.quicknes.dylib"
                   library_windx="game.libretro.quicknes.dll"
                   library_wingl="game.libretro.quicknes.dll">
		<platforms>NES</platforms>
		<extensions>nes</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">QuickNES v1</summary>
		<description>The QuickNES core library, originally by Shay Green, heavily modified. QuickNES is a newer emulator that seems to have good compatibility.

Supported files: .nes

License: GPL v2

Icon credit: Garrett Brown</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
